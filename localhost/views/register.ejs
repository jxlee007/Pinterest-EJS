<%- include('./partials/anim.ejs') %>


<div class="container">
  <div class="w-full h-screen flex justify-center items-center mx-10">
    <div class="w-96 bg-white px-8 py-4 rounded-3xl">
        <h1 class="py-4 mx-11  mb-2 text-xl sm:text-black text-white text-center tracking-tight capitalize font-semibold leading-none">Welcome to Pinterest</h1>

        <% if(error.length > 0){ %>
          <p class="text-red-600 capitalize m-2 font-medium"><%= error %></p>
        <% } %>

        <form action="/login" method="post" >
            <input class="block border-2 border-slate-300 bg-slate-200 rounded-xl my-2 w-full px-2 py-2" type="text" name="username" placeholder="Username">
            
            <input class="block border-2 border-slate-300 bg-slate-200 rounded-xl my-2 w-full px-2 py-2" type="password" name="password" placeholder="Password">
            <a class="mt-2 font-semibold inline-block" href="#">Forgot Password?</a>
            <input class="block border-[3px] rounded-full mt-2 w-full px-3 py-2 bg-red-600 text-white" type="submit" value="Login">
  
            <p class="text-xs font-semibold mt-5 text-center w-3/4 mx-auto">By continuing, you agree to Pinterest's Terms of Service and acknowledge you've read our Privacy Policy. Notice at collection.</p>
        </form>
  
        <a class="inline-block w-full mt-7 text-center text-m font-semibold text-zinc-700" href="/register">Not on Pinterest yet? <strong>Sign Up</strong></a>
  
    </div>
  </div>
  
</div>

<%- include('./partials/footer.ejs') %>