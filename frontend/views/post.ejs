<%- include('./partials/header.ejs') %>



<div class="container mx-auto">
        <h1 class="text-3xl font-bold mb-8">Post Details</h1>
        <div class="flex flex-col md:flex-row md:space-x-8">
            <div class="w-full md:w-1/2">
                <img src="<%= post.image %>" alt="Post Image" class="w-full rounded-lg mb-4">
                <p class="text-gray-600"><%= post.content %></p>
            </div>
            <div class="w-full md:w-1/2">
                <h2 class="text-2xl font-bold mb-4"><%= post.title %> post </h2>
                <p class="text-gray-800 mb-4"><%= post.description %></p>
                <p class="text-gray-600">Author: <%= post.author %></p>
                <p class="text-gray-600">Published on: <%= post.date %></p>
            </div>
        </div>
    </div>

<%- include('./partials/footer.ejs') %>